pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing dependencies...'
                // Exemple pour un projet Node.js :
                sh 'npm install'
                // Pour un projet Python, vous pourriez utiliser : sh 'pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                echo 'Running tests...'
                // Exemple pour des tests Node.js :
                sh 'npm test'
                // Pour Python : sh 'pytest'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Exemple d'une commande de d√©ploiement basique :
                sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
